<div class="postboard row">
  {% for post in postslist | reverse %}
  <div class="postboard-card col-md-12">
    <div class="card h-100">
      <div class="card-body">
        <a href="{{ post.url }}">
          {% if post.data.imageThumbnail == "" %}
            <div class="postboard-thumbnail bi bi-image"></div>
          {% endif %}
          {% if post.data.imageThumbnail != "" %}
            <div class="postboard-thumbnail"
              style="background-image: url({{ post.url }}{{ post.data.imageThumbnail }})">
              
            </div>
          {% endif %}
        </a>
        <h5 class="card-title">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h5>
        <div class="card-text">
          <div>
            {{ post.data.description }}
          </div>
          <div class="postboard-tags">
            {% for tag in post.data.tags %}
              {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="card-footer text-muted text-end">
        Published: {{ post.date | readableDate }}
      </div>
    </div>
  </div>
  {% endfor %}
</div>