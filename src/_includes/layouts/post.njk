---
layout: layouts/base.njk
templateClass: tmpl-post
image: featured.jpg
imageThumbnail: featured-thumbnail.jpg
---
<div class="container post-container">
  <div class="row">
    <div class="col-md-12">
      <h1>{{ title }}</h1>

      {{ content | safe }}

      <hr />
      <h5>Tags</h5>
      <div class="postboard-tags">
        {% for tag in tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>

      <hr />

      <div class="row post-nav">
        <div class="col-md-5">
          {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
          {%- if previousPost %}
            <p class="post-nav-action">Older</p>
            <p class="post-nav-link"><a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}  ({{previousPost.date | readableDate}})</a></p>
          {% endif %}
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 text-end">
          {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
          {%- if nextPost %}
            <p class="post-nav-action">Newer</p>
            <p class="post-nav-link"><a href="{{ nextPost.url | url }}">{{ nextPost.data.title }} ({{nextPost.date | readableDate}})</a></p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>  
</div>