<!doctype html>
<html lang="en">
  <head>
    {% if image %}
    {% set metaimage = page.url+image %}
    {% else %}
    {% set metaimage = metadata.defaultFeaturedImage %}
    {% endif %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="{{ metadata.themeColor }}" />
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <!-- Open Graph meta -->
    <meta property='og:title' content='{{ title or metadata.title }}'/>
    <meta property='og:image' content='{{ metadata.url }}{{ metaimage }}'/>
    <meta property='og:description' content='{{ description or metadata.description }}'/>
    <meta property='og:url' content='{{ metadata.url }}{{ page.url }}' />
    <meta property="og:type" content="blog" />
    <meta property="og:site-name" content="{{metadata.title}}" />
    <meta property="article:published_time" content="{{page.date.toISOString()}}" />
    <meta property="article:author" content="{{metadata.author.name}}" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.png">
    <link rel="stylesheet" href="{{ '/assets/css/bootstrap-icons.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/prism-default.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <div class="site d-flex flex-column">
      {% include "layouts/baseheader.njk" %}

      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      {% include "layouts/basefooter.njk" %}

      <!-- Current page: {{ page.url | url }} -->
    </div>
  </body>
</html>